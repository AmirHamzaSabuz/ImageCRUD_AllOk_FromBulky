@model IEnumerable<Experiment_Image_Bulky.Models.Product >
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="row mb-2 mt-2">
        <div class="col-6 offset-3">
            <a class="btn btn-primary btn-sm offset-"
               asp-action="Upsert"
               asp-controller="Product">

                Upload Image

            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-6 offset-3">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Action</th>

                    </tr>
                </thead>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.Title</td>
                        <td><img src="@d.ImageUrl" height="100" width="100" /></td>
                        <td>
                            <a class="btn btn-warning btn-sm"
                           asp-action="Upsert"
                           asp-controller="Product"
                           asp-route-id="@d.Id">

                                Update

                            </a>

                            <a class="btn btn-danger btn-sm"
                           asp-action="Delete"
                           asp-controller="Product"
                           asp-route-id="@d.Id">

                                Delete

                            </a>

                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
</div>